{
  "env": {
    "mocha": true
  },
  "plugins": [
    "chai-friendly",
    "mocha"
  ],
  "extends": [
    "plugin:chai-friendly/recommended",
    "plugin:mocha/recommended"
  ],
  "rules": {
    "prefer-arrow-callback": 0,
    "mocha/prefer-arrow-callback": 2,
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_doc"
        ]
      }
    ]
  }
}
